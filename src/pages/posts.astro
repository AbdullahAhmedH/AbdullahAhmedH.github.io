---
import { getCollection } from "astro:content";
import Card from "../components/CardPost.astro";
import Layout from "../layouts/Layout.astro";
const allPosts = await getCollection("posts");
const pageTitle = "Portfolio | Posts";
---

<Layout pageTitle={pageTitle}>
    <style>
        :root {
            --background: #39293d;
            --background-light: #f5e6f0;
            --button: #9e7a9e;
            --text: #f5e6f0;
            --text-light: #39293d;
            --text-link: #b38cb6;
            --underline: #704e72;
            --header: "Indie Flower", cursive;
            --body: "Josefin Sans", sans-serif;
        }
    </style>
    <div class="gif">
        <img width="300" height="259" alt="RaccoonNotesGif" src="/blog.webp" />
    </div>
    <h2>Blog</h2>
    <ul role="list" class="link-card-grid">
        {
            allPosts.map((cardPost) => (
                <Card
                    url={`/posts/${cardPost.slug}/`}
                    image={cardPost.data.image.url}
                    title={cardPost.data.title}
                    date={cardPost.data.date}
                />
            ))
        }
    </ul>
</Layout>
